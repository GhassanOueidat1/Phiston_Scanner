<Page x:ConnectionId='1'
    x:Class="ScanTest1.HandScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScanTest1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    >

    <Grid x:ConnectionId='2' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"  x:Name="ManualScanLayout"
          Height="720" Width="480">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width=".25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>





        </Grid.RowDefinitions>

        <TextBlock Text="Manual Scan Data Entry" Grid.Column="0" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Grid.Row="0" />
        <TextBlock Text="Use hand scanner to scan barcodes" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" />
        <TextBlock Text="CODE VALUE" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="TYPE" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='31' x:Name="Code1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border Background="LightSkyBlue" Grid.Row="4" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='30' x:Name="Type1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='29' x:Name="Code2" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border Background="LightSkyBlue" Grid.Row="5" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='28' x:Name="Type2" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='27' x:Name="Code3" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Background="LightSkyBlue" Grid.Row="6" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='26' x:Name="Type3" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>



        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='25' x:Name="Code4" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Background="LightSkyBlue" Grid.Row="7" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='24' x:Name="Type4" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>


        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='23' x:Name="Code5" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Background="LightSkyBlue" Grid.Row="8" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='22' x:Name="Type5" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>


        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='21' x:Name="Code6" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Background="LightSkyBlue" Grid.Row="9" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='20' x:Name="Type6" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>


        <Border Background= "LightSkyBlue" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="2" Margin="4">
            <TextBlock x:ConnectionId='19' x:Name="Code7" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Background="LightSkyBlue" Grid.Row="10" Grid.Column="3"  Margin="4">
            <TextBlock x:ConnectionId='18' x:Name="Type7" Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Button x:ConnectionId='3' x:Name="RemoveCode1" Content="DELETE" Grid.Column="4" Grid.Row="4"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='4' x:Name="RemoveCode2" Content="DELETE" Grid.Column="4" Grid.Row="5"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='5' x:Name="RemoveCode3" Content="DELETE" Grid.Column="4" Grid.Row="6"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='6' x:Name="RemoveCode4" Content="DELETE" Grid.Column="4" Grid.Row="7"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='7' x:Name="RemoveCode5" Content="DELETE" Grid.Column="4" Grid.Row="8"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='8' x:Name="RemoveCode6" Content="DELETE" Grid.Column="4" Grid.Row="9"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />
        <Button x:ConnectionId='9' x:Name="RemoveCode7" Content="DELETE" Grid.Column="4" Grid.Row="10"  HorizontalAlignment="Center" VerticalAlignment="Center"                          />

        <Button x:ConnectionId='10' x:Name="LogButton" Content="Log Only" Grid.Column="1" Grid.Row="12" Grid.ColumnSpan="2"  HorizontalAlignment="Center" VerticalAlignment="Center"                        />
        <Button x:ConnectionId='11' x:Name="ScanButton" Content="Autoscan and Log" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="12"  HorizontalAlignment="Center" VerticalAlignment="Center"                         />
        <Button x:ConnectionId='12' x:Name="QuitButton" Content="Quit" Grid.Row="16" Grid.Column="2" Grid.ColumnSpan='2' 
                VerticalAlignment="Center" HorizontalAlignment="Center"                         />

        <TextBlock Text="Logs handheld data to file" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="13" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Performs autoscan, capturing drive image and readable barcodes. All data, including hand scanned codes, are logged to file." 
                   Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="13" TextWrapping="Wrap" Grid.RowSpan="3"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>


        <Popup x:ConnectionId='13' VerticalOffset="100" HorizontalOffset="100" x:Name="ScanPopup">
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                BorderThickness="2" Width="250" Height="150">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                    <TextBlock Text="Insert drive into Secure Scanner and press scan..." FontSize="18" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" >
                        <Button x:ConnectionId='16' Content="SCAN"                             HorizontalAlignment="Center"/>
                        <Button x:ConnectionId='17' Content="QUIT"                             HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <Popup x:ConnectionId='14' VerticalOffset="100" HorizontalOffset="100" x:Name="NoScannerPopup">
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                BorderThickness="2" Width="250" Height="150">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                    <TextBlock Text="Unable to open HID POS Scanner" FontSize="18" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" >
                        <Button x:ConnectionId='15' Content="Return"                            HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Page>

