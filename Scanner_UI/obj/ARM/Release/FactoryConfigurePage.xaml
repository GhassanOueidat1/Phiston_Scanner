<Page x:ConnectionId='1'
    x:Class="ScanTest1.FactoryConfigurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScanTest1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"  x:Name="UserIDLayout"
          Height="720" Width="480">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width=".5*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height=".9*"/>
            <RowDefinition Height=".9*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>


        <Button x:ConnectionId='3' x:Name="Return" AllowFocusOnInteraction="False" Content="Return" Grid.Column="1" Grid.Row="11" Margin="5" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"                      FontSize="20"     />
        <Button x:ConnectionId='4' x:Name="Set" AllowFocusOnInteraction="False" Content="Set" Grid.Column="3" Margin="5" Grid.Row="11" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"                     FontSize="20"  />
        <Button x:ConnectionId='5' x:Name="Delete" AllowFocusOnInteraction="False" Content="DEL" Grid.Column="2" Margin="5" Grid.Row="11" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"                      FontSize="20"    />
        <Button x:ConnectionId='6' x:Name="SetLicense" AllowFocusOnInteraction="False" Content="Set License Screen" Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="3" Margin="5" HorizontalAlignment="Left"  VerticalAlignment="Stretch" FontSize="20"                              />
        <Button x:ConnectionId='7' x:Name="SetResetCycle" AllowFocusOnInteraction="False" Content="Reset Cycle Count" Grid.Column="2" Grid.Row="12" Grid.ColumnSpan="3" Margin="5" HorizontalAlignment="Right"  VerticalAlignment="Stretch" FontSize="20"                                  />

        <Button x:ConnectionId='8' x:Name="B1" AllowFocusOnInteraction="False" Content="1" Grid.Column="1" Margin="5" Grid.Row="7" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='9' x:Name="B2" AllowFocusOnInteraction="False" Content="2" Grid.Column="2" Margin="5" Grid.Row="7" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='10' x:Name="B3" AllowFocusOnInteraction="False" Content="3" Grid.Column="3" Margin="5" Grid.Row="7" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='11' x:Name="B4" AllowFocusOnInteraction="False" Content="4" Grid.Column="1" Margin="5" Grid.Row="8" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='12' x:Name="B5" AllowFocusOnInteraction="False" Content="5" Grid.Column="2" Margin="5" Grid.Row="8" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='13' x:Name="B6" AllowFocusOnInteraction="False" Content="6" Grid.Column="3" Margin="5" Grid.Row="8" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='14' x:Name="B7" AllowFocusOnInteraction="False" Content="7" Grid.Column="1" Margin="5" Grid.Row="9" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='15' x:Name="B8" AllowFocusOnInteraction="False" Content="8" Grid.Column="2" Margin="5" Grid.Row="9" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='16' x:Name="B9" AllowFocusOnInteraction="False" Content="9" Grid.Column="3" Margin="5" Grid.Row="9" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />
        <Button x:ConnectionId='17' x:Name="B0" AllowFocusOnInteraction="False" Content="0" Grid.Column="2" Margin="5" Grid.Row="10" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   FontSize="20"                   />

        <TextBlock x:ConnectionId='18' x:Name="Header" HorizontalAlignment="Center" Text="FACTORY CONFIGURATION" Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0" Grid.RowSpan="1" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" />

        <TextBlock HorizontalAlignment="Left" Text="CycleCount:" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"  Margin="40,0,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBlock x:ConnectionId='19' x:Name="CycleCount" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Width="150" Margin="80,0,0,0" VerticalAlignment="Top" FontSize="20" />

        <TextBlock HorizontalAlignment="Left" Text="Current SN:" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"  Margin="40,0,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBlock x:ConnectionId='20' x:Name="CurrentSN" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Width="150" Margin="80,0,0,0" VerticalAlignment="Top" FontSize="20" />

        <TextBlock HorizontalAlignment="Left" Text="ENTER SN (0-65535):" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4"  Margin="40,0,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:ConnectionId='21' x:Name="SerialNumber" HorizontalAlignment="Left" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Width="150" Margin="80,0,0,0" VerticalAlignment="Top" FontSize="20" />


        <TextBlock x:ConnectionId='22' x:Name="UserMsg" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="13" FontSize="16" Text=""/>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="15" Grid.ColumnSpan="5">
            <TextBlock HorizontalAlignment="Left"  Text="HW REV:" FontSize="14" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:ConnectionId='25' x:Name="HardwareRev" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center" FontSize="14" Margin="5" />
            <TextBlock HorizontalAlignment="Left" Text="FW REV:" FontSize="14" VerticalAlignment="Center" Margin="5" />
            <TextBlock x:ConnectionId='26' x:Name="FirmwareRev" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center" FontSize="14" Margin="5" />
            <TextBlock HorizontalAlignment="Left" Text="SW REV:" FontSize="14" VerticalAlignment="Center" Margin="5" />
            <TextBlock x:ConnectionId='27' x:Name="SoftwareRev" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center" FontSize="14" Margin="5" />
        </StackPanel>

        <CheckBox x:ConnectionId='23' x:Name="HandScanCheckbox" Content="Add hand scan functionality." Grid.Row="5" Margin="40,0,0,0" Grid.ColumnSpan="4"
                  FontSize="20"                       />
        <CheckBox x:ConnectionId='24' x:Name="MultiScanCheckbox" Content="Continuous Run (100)" Grid.Row="6" Margin="40,0,0,0" Grid.ColumnSpan="4"
                  FontSize="20"                        />
    </Grid>
</Page>

